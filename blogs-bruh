from django,shortcuts import render
from .models import Post

#create your views here
#saying hello
def hello(request):
		return render( request, "hello.html", {})
def posts(requests):
		posts = Post.objects.order_by('-created_date')
		return render( request, "post.html",{'posts'}:posts)
